=render "template/header_admin"
.top-index
  .container
    .row
      .col-lg-1
      .col-lg-7
        %h3.user-profile-name
          %b
            = @user.last_name + @user.first_name
          %p.user-profile-title
            さんの会員詳細
  .row
    .col-lg-2
    .col-lg-7
      %table.table.table-borderless
        %tr
          %td 顧客ID
          %td
            = @user.id
            = @user.is_active
        %tr
          %td 氏名
          %td= @user.last_name + @user.first_name
        %tr
          %td メールアドレス
          %td= @user.email
        %tr
          %td 郵便番号
          %td= @user.postcode
        %tr
          %td 都道府県
          %td= @user.prefecture_code
        %tr
          %td 市区町村
          %td= @user.address_city
        %tr
          %td 番地
          %td= @user.address_street
        %tr
          %td ビル
          %td= @user.address_building
        %tr
          %td 電話番号
          %td= @user.phone_number
        
      .action-botton
        = link_to "編集する",edit_admin_user_path(@user), class: "btn btn-primary bottom"
        = link_to "注文履歴一覧を見る", admin_orders_path(@user), class: "btn btn-primary bottom"
    .col-lg-6
