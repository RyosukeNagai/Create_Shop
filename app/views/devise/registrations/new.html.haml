.sign
  .sign__title
    %h2 
      %b 新規会員登録
    %p
      会員登録を行います。
      %br/
      情報を入力後、確認ボタンを押してください。
  .login-main
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .form-group
        = f.label :パスワード
        %span.form-group__require 必須
        = f.password_field :password,{autocomplete: "new-password",placeholder: "6文字以上の半角英数字",class:'form-group__input',id:"password"}
      .form-group
        = f.label :"お名前　　　　　　"
        = f.text_field :last_name, {placeholder:"例) 八村",class:'form-group__input--half'}
        = f.text_field :first_name, {placeholder:"例) 塁",class:'form-group__input--half'}
      .form-group
        = f.label :メールアドレス　
        %i.fas.fa-envelope
        = f.email_field :email, {autofocus: true, autocomplete: "email", placeholder: "sample@stores.jp",class: 'form-group__input'}
      .form-group
        = f.label :郵便番号　　　　
        %i.fab.fa-mailchimp
        = f.text_field :postcode, {placeholder: "例) 1500011",class: 'form-group__input--half',id: "user_postcode"}
      .form-group
        = f.label :都道府県　　　　　
        = f.text_field :prefecture_code,class: 'form-group__input--half',id: 'user_prefecture_code', collection: JpPrefecture::Prefecture.all, :value_method => :name, include_blank: '都道府県'
      .form-group
        = f.label :市区町村　　　　　
        = f.text_field :address_city, {placeholder: "神戸市",class:'form-group__input',id: "user_address_city"}
      .form-group
        = f.label :番地　　　　　　　
        = f.text_field :address_street, {placeholder: "4-5-6",class:'form-group__input',id: "user_address_street"}
      .form-group
        = f.label :ビル　　　　　　
        %i.fas.fa-building
        = f.text_field :address_building, {placeholder: "新山麓荘",class:'form-group__input'}
      .form-group
        = f.label :電話番号　　　　
        %i.fas.fa-phone-alt
        = f.text_field :phone_number, {placeholder: "例) 09012345678",class:'form-group__input--half'}

      .actions
        = f.submit "確認", class: "btn btn-primary btn-lg btn-block"
        .actions__link
          = link_to "既に登録済みの方はこちらから", new_session_path(resource_name)
